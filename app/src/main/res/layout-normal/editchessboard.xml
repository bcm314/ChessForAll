<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="8dip"
    android:paddingLeft="8dip"
    android:paddingRight="8dip"
    android:paddingBottom="8dip"
    android:background="@drawable/bg_c4a" >
    	<GridView 
			android:id="@+id/gridview"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginBottom="3dip"
			android:clickable="true"
			android:listSelector="@null"
			android:numColumns="8"
			android:verticalSpacing="0dip"
			android:horizontalSpacing="0dip" />

		<ImageView 
			android:id="@+id/wKing"
			android:src="@drawable/kll"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_below="@id/gridview"
			android:layout_width="44dip" 
			android:layout_height="44dip" 
			android:layout_marginTop="0dip" />
		<ImageView 
			android:id="@+id/wQueen"
			android:src="@drawable/qld"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/wKing"
			android:layout_alignTop="@id/wKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		<ImageView 
			android:id="@+id/wRook"
			android:src="@drawable/rll"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/wQueen"
			android:layout_alignTop="@id/wKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		<ImageView 
			android:id="@+id/wBishop"
			android:src="@drawable/bld"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/wRook"
			android:layout_alignTop="@id/wKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />	
		<ImageView 
			android:id="@+id/wKnight"
			android:src="@drawable/nll"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/wBishop"
			android:layout_alignTop="@id/wKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		<ImageView 
			android:id="@+id/wPawn"
			android:src="@drawable/pld"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/wKnight"
			android:layout_alignTop="@id/wKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		
		<ImageView 
			android:id="@+id/trash"
			android:src="@drawable/trash"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/wPawn"
			android:layout_alignTop="@id/wKing"
			android:layout_alignParentRight="true" 
			android:layout_width="44dip" 
			android:layout_height="44dip"/>
			
		<ImageView 
			android:id="@+id/bKing"
			android:src="@drawable/kdd"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_below="@id/wKing"
			android:layout_width="44dip" 
			android:layout_height="44dip" 
			android:layout_marginTop="0dip" />
		<ImageView 
			android:id="@+id/bQueen"
			android:src="@drawable/qdl"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/bKing"
			android:layout_alignTop="@id/bKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		<ImageView 
			android:id="@+id/bRook"
			android:src="@drawable/rdd"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/bQueen"
			android:layout_alignTop="@id/bKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		<ImageView 
			android:id="@+id/bBishop"
			android:src="@drawable/bdl"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/bRook"
			android:layout_alignTop="@id/bKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />	
		<ImageView 
			android:id="@+id/bKnight"
			android:src="@drawable/ndd"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/bBishop"
			android:layout_alignTop="@id/bKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		<ImageView 
			android:id="@+id/bPawn"
			android:src="@drawable/pdl"
			android:background="@drawable/layout_border_transparent"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/bKnight"
			android:layout_alignTop="@id/bKing" 
			android:layout_width="44dip" 
			android:layout_height="44dip" />
		
		<ImageView 
			android:id="@+id/color"
			android:src="@drawable/white"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/bPawn"
			android:layout_alignTop="@id/bKing" 
			android:layout_alignParentRight="true"
			android:layout_width="44dip" 
			android:layout_height="44dip"/>
		
		<TextView 
			android:id="@+id/message" 
			android:layout_width="wrap_content" 
			android:layout_height="wrap_content"
			android:layout_marginTop="0dip"
			android:layout_marginLeft="4dip"  
			android:layout_below="@id/bKing" />
			    		
		<ImageView 	
			android:id="@+id/btnOk"
			android:src="@drawable/button_ok"
			android:onClick="myClickHandler" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginLeft="3dip"
		    android:layout_marginRight="10dip"
		    android:layout_marginBottom="0dip"
		    android:layout_alignParentBottom="true"
    		android:layout_alignParentLeft="true"/>
		<ImageView 	
			android:id="@+id/btnFen"
			android:src="@drawable/button_fen"
			android:layout_toRightOf="@id/btnOk" 
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="10dip"
		    android:layout_marginBottom="0dip"
		    android:layout_alignParentBottom="true"/>		  
		<ImageView 	
			android:id="@+id/btnBoard"
			android:src="@drawable/button_board"
			android:layout_toRightOf="@id/btnFen"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginRight="10dip"
		    android:layout_marginBottom="0dip"
		    android:layout_alignParentBottom="true"/>
		<ImageView 	
			android:id="@+id/btnCamera"
			android:src="@drawable/button_camera"
			android:onClick="myClickHandler" 
			android:layout_toRightOf="@id/btnBoard"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_marginBottom="0dip"
		    android:layout_alignParentBottom="true"/>
		<ImageView 
			android:id="@+id/help"
			android:src="@drawable/button_help"
			android:onClick="myClickHandler" 
			android:layout_alignParentBottom="true"
		    android:layout_alignParentRight="true"
		    android:layout_marginRight="3dip"
		    android:layout_marginBottom="0dip"
		    android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		
</RelativeLayout>
