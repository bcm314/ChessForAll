<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/mainView"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingTop="1dip"
    android:paddingLeft="5dip"
    android:paddingRight="5dip"
    android:paddingBottom="1dip"
    android:background="@drawable/bg_c4a" >

	<TextView android:id="@+id/lblPlayerTimeA"
    style="@style/c4aTV50" 
    android:clickable="true"
    android:onClick="myClickHandler" 
    android:layout_alignParentRight="true"
    android:layout_marginTop="2dip"
    android:layout_marginRight="0dip"
    android:gravity="center"
    android:singleLine="true"
    android:background="@drawable/borderyellow"
 	android:textColor="#000000" /> 	
	<TextView android:id="@+id/lblPlayerEloA"
    style="@style/c4aTV50" 
    android:clickable="true"
    android:onClick="myClickHandler" 
    android:layout_alignTop="@id/lblPlayerTimeA"
    android:layout_toLeftOf="@id/lblPlayerTimeA"
    android:layout_marginRight="5dip"
    android:gravity="center"
    android:singleLine="true"
    android:background="@drawable/bordergreen"
 	android:textColor="#000000" /> 
	<TextView android:id="@+id/lblPlayerNameA"
    style="@style/c4aTV3" 
    android:clickable="true"
    android:onClick="myClickHandler" 
    android:layout_width="fill_parent" 
    android:layout_alignTop="@id/lblPlayerTimeA"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="0dip"
    android:layout_marginRight="5dip"
    android:gravity="center"
    android:layout_toLeftOf="@id/lblPlayerEloA"
    android:singleLine="true"
    android:background="@drawable/bordergreen"
 	android:textColor="#000000" />
 	
	<GridView 
	android:id="@+id/gridview"
	android:layout_width="wrap_content"
	android:layout_height="wrap_content"
	android:layout_below="@id/lblPlayerNameA"
	android:layout_marginTop="2dip"
	android:clickable="true"
	android:numColumns="8"
	android:listSelector="@null"
	android:verticalSpacing="0dip"
	android:horizontalSpacing="0dip" />

	<TextView android:id="@+id/lblPlayerTimeB"
    style="@style/c4aTV50"
    android:clickable="true"
    android:onClick="myClickHandler" 
    android:layout_below="@id/gridview"
    android:layout_alignParentRight="true"
    android:layout_marginTop="2dip"
    android:layout_marginRight="0dip"
    android:gravity="center"
    android:singleLine="true"
    android:background="@drawable/borderyellow"
 	android:textColor="#000000" /> 	
	<TextView android:id="@+id/lblPlayerEloB"
    style="@style/c4aTV50"
    android:clickable="true"
    android:onClick="myClickHandler" 
    android:layout_alignTop="@id/lblPlayerTimeB"
    android:layout_toLeftOf="@id/lblPlayerTimeB"
    android:layout_marginRight="5dip"
    android:gravity="center"
    android:singleLine="true"
    android:background="@drawable/bordergreen"
 	android:textColor="#000000" /> 
	<TextView android:id="@+id/lblPlayerNameB"
    style="@style/c4aTV3" 
    android:clickable="true"
    android:onClick="myClickHandler" 
    android:layout_width="fill_parent" 
    android:layout_alignTop="@id/lblPlayerTimeB"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="0dip"
    android:layout_marginRight="5dip"
    android:gravity="center"
    android:layout_toLeftOf="@id/lblPlayerEloB"
    android:singleLine="true"
    android:background="@drawable/bordergreen"
 	android:textColor="#000000" />
 	
	<TextView android:id="@+id/lblMessage"
    style="@style/c4aTV3"
    android:visibility="invisible"
	android:clickable="true"
	android:onClick="myClickHandler" 
    android:layout_below="@id/lblPlayerNameB"
    android:layout_alignParentLeft="true"
    android:layout_marginTop="1dip"
    android:singleLine="true"
    android:background="@drawable/borderpink"
 	android:textColor="#000000" 
 	android:text="@string/screen_medium"/>

	<include android:id="@+id/btn_a1" 
    layout="@layout/btn_a1"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="2dip"
	android:layout_marginBottom="2dip" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"  
    android:visibility="invisible"/>
	<include android:id="@+id/btn_a2" 
    layout="@layout/btn_a2"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="2dip"
	android:layout_marginBottom="2dip" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"  
    android:visibility="invisible"/>
	<include android:id="@+id/btn_a3" 
    layout="@layout/btn_a3"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="2dip"
	android:layout_marginBottom="2dip" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"  
    android:visibility="invisible"/>
	<include android:id="@+id/btn_a4" 
    layout="@layout/btn_a4"
    android:layout_alignParentBottom="true"
    android:layout_marginTop="2dip"
	android:layout_marginBottom="2dip" 
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"  
    android:visibility="invisible"/>
	
	<ImageView android:id="@+id/scroll_left"
	android:src="@drawable/scroll_yellow"
	android:layout_marginBottom="5dip"  
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_width="wrap_content"
	android:layout_height="wrap_content"  
    android:clickable="false" />
	<ImageView android:id="@+id/scroll_right"
	android:src="@drawable/scroll_yellow"
	android:layout_marginBottom="5dip"  
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_width="wrap_content"
	android:layout_height="wrap_content"  
    android:clickable="false" />

	<ScrollView android:id="@+id/scrlInfo"
	android:fillViewport="true"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent" 
	android:layout_below="@id/lblPlayerNameB"
	android:layout_above="@id/btn_a1"
	android:layout_alignParentLeft="true"
	android:layout_marginTop="2dip"
	android:layout_marginBottom="2dip" > 
		<TextView android:id="@+id/lblInfo"
	    style="@style/c4aTV3"
	    android:clickable="true"
		android:onClick="myClickHandler"
		android:layout_width="fill_parent"
		android:includeFontPadding="true"
		android:bufferType="spannable"
	    android:paddingLeft="2dip"
	    android:paddingRight="2dip"
	    android:background="@drawable/borderyellow"
	  	android:textColor="#000000" /> 
	</ScrollView>
	    
</RelativeLayout>
