<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/queryPlayer"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@color/query_background"
  	android:paddingTop="0dip"
    android:paddingLeft="0dip" 
    android:paddingRight="0dip" >
	<TextView android:id="@+id/qTitle"
		style="@style/c4aTV1"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:textColor="@color/text_pink"
	 	android:text="@string/qeTitle" />
	<View  android:id="@+id/divider1" 
	    android:layout_below="@id/qTitle"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="9dip"
        android:layout_marginBottom="6dip"
        android:background="@color/divider_background" />
	
	<TextView android:id="@+id/qeEventTv"
		style="@style/c4aTV1"
		android:layout_below="@id/divider1"
		android:layout_alignParentLeft="true"
	 	android:text="@string/qEvent" />
	<EditText android:id="@+id/qeEvent"
		style="@style/c4aET1"
		android:layout_below="@id/divider1"
		android:layout_marginRight="5dip"
		android:layout_toRightOf="@id/qeEventTv" />
	
	<TextView android:id="@+id/qeSiteTv"
		style="@style/c4aTV1"
		android:layout_below="@id/qeEvent"
		android:layout_alignParentLeft="true"
	 	android:text="@string/qSite" />
	<EditText android:id="@+id/qeSite"
		style="@style/c4aET1"
		android:layout_below="@id/qeEvent"
		android:layout_marginRight="5dip"
		android:layout_toRightOf="@id/qeSiteTv" />
	
	<ImageView android:id="@+id/qActionBtn"
		android:src="@drawable/button_ok"
		android:onClick="myClickHandler"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dip" 
		android:layout_marginLeft="15dip" />
	<ImageView android:id="@+id/qCancel"
		android:src="@drawable/button_cancel"
		android:onClick="myClickHandler"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dip"
		android:layout_marginRight="15dip" />
</RelativeLayout>
