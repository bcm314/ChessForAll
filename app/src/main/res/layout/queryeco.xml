<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  	android:id="@+id/queryPlayer"
  	android:layout_width="fill_parent"
  	android:layout_height="fill_parent"
  	android:background="@color/query_background"
  	android:paddingTop="0dip"
    android:paddingLeft="0dip" 
    android:paddingRight="0dip" >
	<TextView android:id="@+id/qTitle"
		style="@style/c4aTV1"
		android:gravity="center"
		android:layout_width="fill_parent"
		android:textColor="@color/text_pink"
	 	android:text="@string/qoTitle" />
	<View  android:id="@+id/divider1" 
	    android:layout_below="@id/qTitle"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="9dip"
        android:layout_marginBottom="6dip"
        android:background="@color/divider_background" />
	
	<TextView android:id="@+id/qoEcoTv"
		style="@style/c4aTV1"
		android:layout_below="@id/divider1"
		android:layout_alignParentLeft="true"
	 	android:text="@string/qEco" />
	<EditText android:id="@+id/qoEco"
		style="@style/c4aET1"
		android:layout_marginRight="5dip"
		android:layout_below="@id/divider1"
		android:layout_toRightOf="@id/qoEcoTv" />
	
	<TextView android:id="@+id/qoOpeningTv"
		style="@style/c4aTV1"
		android:layout_below="@id/qoEco"
		android:layout_alignParentLeft="true"
	 	android:text="@string/qOpening" />
	<EditText android:id="@+id/qoOpening"
		style="@style/c4aET1"
		android:layout_marginRight="5dip"
		android:layout_below="@id/qoEco"
		android:layout_toRightOf="@id/qoOpeningTv" />
	
	<TextView android:id="@+id/qoVariationTv"
		style="@style/c4aTV1"
		android:layout_below="@id/qoOpening"
		android:layout_alignParentLeft="true"
	 	android:text="@string/qVariation" />
	<EditText android:id="@+id/qoVariation"
		style="@style/c4aET1"
		android:layout_marginRight="5dip"
		android:layout_below="@id/qoOpening"
		android:layout_toRightOf="@id/qoVariationTv" />
	<View  android:id="@+id/divider2" 
	    android:layout_below="@id/qoVariation"
        android:layout_height="2dp"
        android:layout_width="fill_parent"
        android:layout_marginTop="9dip"
        android:layout_marginBottom="6dip"
        android:background="@color/divider_background" />
	
	<TextView android:id="@+id/qoDateTv"
		style="@style/c4aTV1"
		android:layout_below="@id/divider2"
		android:layout_alignParentLeft="true"
		android:layout_marginRight="40dip"
	 	android:text="@string/qDate" />
	<CheckBox android:id="@+id/qoDateDescCb"
		style="@style/c4aCB1"
		android:layout_below="@id/divider2"
		android:layout_marginRight="5dip"
		android:layout_alignParentRight="true"
		android:text="@string/qDesc" />
	
	<TextView android:id="@+id/qoDateFromTv"
		style="@style/c4aTV1"
		android:layout_below="@id/qoDateDescCb"
		android:layout_alignParentLeft="true"
	 	android:text="@string/qFrom" />
	<EditText android:id="@+id/qoDateFrom"
		style="@style/c4aET1"
		android:layout_width="100dp"
		android:inputType="date"
		android:maxLength="10" 
		android:layout_marginRight="5dip"
		android:layout_below="@id/qoDateDescCb"
		android:layout_alignParentRight="true" />    
	<TextView 
		style="@style/c4aTV1"
		android:layout_below="@id/qoDateDescCb"
		android:layout_toLeftOf="@id/qoDateFrom"
	 	android:text="@string/qDateFormat" />
	
	<TextView android:id="@+id/qoDateToTv"
		style="@style/c4aTV1"
		android:layout_below="@id/qoDateFrom"
		android:layout_alignParentLeft="true"
	 	android:text="@string/qTo" />
	<EditText android:id="@+id/qoDateTo"
		style="@style/c4aET1"
		android:layout_width="100dp"
		android:inputType="date"
		android:maxLength="10"
		android:layout_marginRight="5dip" 
		android:layout_below="@id/qoDateFrom"
    	android:layout_alignParentRight="true" />  
	<TextView 
		style="@style/c4aTV1"
		android:layout_below="@id/qoDateFrom"
		android:layout_toLeftOf="@id/qoDateTo"
	 	android:text="@string/qDateFormat" />
	
	<ImageView android:id="@+id/qActionBtn"
		android:src="@drawable/button_ok"
		android:onClick="myClickHandler"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_alignParentLeft="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dip" 
		android:layout_marginLeft="15dip" />
	<ImageView android:id="@+id/qCancel"
		android:src="@drawable/button_cancel"
		android:onClick="myClickHandler"
		android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
		android:layout_alignParentRight="true"
		android:layout_alignParentBottom="true"
		android:layout_marginBottom="15dip"
		android:layout_marginRight="15dip" />
</RelativeLayout>
