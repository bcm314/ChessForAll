<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background_c4a_2" >

<TextView
	android:id="@+id/title"
	style="@style/c4aTV2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_alignParentTop="true"
	android:layout_marginBottom="0dp"
	android:layout_marginLeft="0dip"
	android:paddingTop="0dip"
	android:paddingLeft="0dip"
	android:paddingRight="0dip"
	android:singleLine="true"
	android:gravity="center"
	android:background="@drawable/rectangletransparent"
	android:text="@string/app_optionsPlay"
	android:textColor="#000000" />

<ImageView
	android:id="@+id/ntBtnOk"
	style="@style/c4aImgBtn1"
	android:src="@drawable/button_ok"
	android:onClick="myClickHandler"
    android:layout_marginTop="7dip"
    android:layout_marginBottom="3dip" 
    android:layout_marginLeft="10dip" 
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"/>
<Button
	android:id="@+id/ntBtnPgn"
	style="@style/c4aImgBtn1"
	android:onClick="myClickHandler"
	android:background="@drawable/rectangleblue"
    android:layout_marginTop="20dip"
    android:layout_marginBottom="@dimen/margin_1"
	android:layout_marginLeft="@dimen/margin_1"
	android:layout_marginRight="@dimen/margin_1"
	android:paddingLeft="5dip"
	android:paddingRight="5dip"
	android:layout_alignTop="@id/ntBtnOk"
	android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:text="@string/btn_Pgn" />
<Button
	android:id="@+id/ntBtnMoveText"
	style="@style/c4aImgBtn1"
	android:onClick="myClickHandler"
	android:background="@drawable/rectangleblue"
    android:layout_marginTop="20dip"
	android:layout_marginBottom="@dimen/margin_1"
	android:layout_marginLeft="@dimen/margin_1"
	android:paddingLeft="5dip"
	android:paddingRight="5dip"
	android:layout_alignTop="@id/ntBtnOk"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@id/ntBtnPgn"
    android:text="@string/btn_MoveText" />
<Button
	android:id="@+id/ntBtnMove"
	style="@style/c4aImgBtn1"
	android:onClick="myClickHandler"
	android:background="@drawable/rectangleblue"
    android:layout_marginTop="20dip"
	android:layout_marginBottom="@dimen/margin_1"
	android:paddingLeft="5dip"
	android:paddingRight="5dip"
	android:layout_alignTop="@id/ntBtnOk"
    android:layout_alignParentBottom="true"
    android:layout_toLeftOf="@id/ntBtnMoveText"
    android:text="@string/btn_Move" />

<ScrollView
	android:fillViewport="true"
	android:layout_below="@id/title"
	android:layout_above="@id/ntBtnOk"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"> 
	<TextView
		android:id="@+id/ntTv"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textIsSelectable="true"
		android:typeface="sans"
		android:textStyle="bold"
		android:textSize="19dip"
		android:background="@color/notation_background"
		android:textColor="@color/text_dark" />
</ScrollView>

</RelativeLayout>
