<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="@drawable/background_c4a_2" >

<TextView
	android:id="@+id/title"
	style="@style/c4aTV2"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:layout_alignParentLeft="true"
	android:layout_alignParentTop="true"
	android:layout_marginLeft="0dip"
	android:paddingTop="0dip"
	android:paddingLeft="0dip"
	android:paddingRight="0dip"
	android:singleLine="true"
	android:gravity="center"
	android:background="@drawable/bordergrey"
	android:text="@string/app_moveAnnotation"
	android:textColor="#000000" />

<ImageView
	android:id="@+id/mtBtnOk"
	style="@style/c4aImgBtn1"
	android:src="@drawable/button_ok"
	android:onClick="myClickHandler" 
    android:layout_width="48dip"
    android:layout_height="48dip"
    android:layout_marginTop="10dip"
    android:layout_marginBottom="7dip"
    android:layout_centerHorizontal="true"  
    android:layout_alignParentBottom="true" />

<EditText
	android:id="@+id/mtEt"
    android:layout_below="@id/title"
    android:layout_above="@id/mtBtnOk"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:gravity="top"
    android:typeface="sans"
    android:textStyle="bold"
    android:textSize="19sp" 
    android:background="@color/notation_background"
 	android:textColor="@color/text_dark" />

</RelativeLayout>
