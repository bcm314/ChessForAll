<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
  	android:layout_width="wrap_content"
  	android:layout_height="wrap_content">
<TextView android:id="@+id/dgMessage"
	android:layout_centerHorizontal="true"
    android:layout_width="wrap_content" 
    android:layout_height="wrap_content" />
<EditText android:id="@+id/dgInputText"
	android:layout_height="wrap_content"
	android:layout_width="100dip"
    android:layout_centerHorizontal="true"
	android:singleLine="true"
	android:layout_below="@id/dgMessage" />
<Button android:id="@+id/dgBtn1"
    android:layout_width="80dip"
    android:layout_height="wrap_content"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="5dip"
	android:layout_marginBottom="5dip"
    android:layout_below="@id/dgInputText" />
<Button android:id="@+id/dgBtn2"
    android:layout_width="80dip"
    android:layout_height="wrap_content"
    android:layout_centerHorizontal="true"
    android:layout_below="@id/dgInputText" />
<Button android:id="@+id/dgBtn3"
    android:layout_width="80dip"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:layout_marginRight="5dip"
	android:layout_marginBottom="5dip"
	android:layout_below="@id/dgInputText" />
</RelativeLayout>
